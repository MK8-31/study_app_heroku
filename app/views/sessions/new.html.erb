<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 wht">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <label for="user_email">メールアドレス</label>
      <%= f.email_field :email, class: 'form-control',tabindex: 1 %>

      <label for="user_password">パスワード</label>
      <%= link_to "(パスワードを忘れた)",new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control',tabindex: 2 %>
      
      <%= f.label :remember_me,class: "checkbox inline" do %>
        <%= f.check_box :remember_me,tabindex: 3 %>
        <span>自動ログイン</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary",tabindex: 4 %>
    <% end %>

    <p>新しいユーザーですか? <%= link_to "アカウントを作る!", signup_path %></p>
  </div>
</div>