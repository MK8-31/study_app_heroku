<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4 wht">
    <section class="user_info">
      <h1 class="black">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
        <% if cookies['remember_token'].present? %>
          <small>自動ログイン：有効</small>
        <% else %>
          <small>自動ログイン：無効</small>
        <% end %>
  </aside>
</div>