<% provide(:title,"予定表") %>

<h1>予定表</h1>

<div class="row">
    <div class="table-responsive wht">
        <p><%= link_to '予定', '#',class: "btn btn-warning" %>：課題　<%= link_to '予定','#',class: "btn btn-danger" %>：テスト</p>
        <p class="text-success">ボタンをクリックすると詳細が表示されます。</p>
        <%= month_calendar events: @notices do |date, notices| %>
            <%= date.day %>
            
            <% notices.each do |notice| %>
                <div>
                    <% if notice.homework_test %>
                        <%= link_to notice.subject, notice,class: "btn btn-danger" %>
                    <% else %>
                        <%= link_to notice.subject, notice,class: "btn btn-warning" %>
                    <% end %>
                </div>
            <% end %>
        <% end %>
        <%= link_to "通知",reminders_path %>
    </div>
</div>

